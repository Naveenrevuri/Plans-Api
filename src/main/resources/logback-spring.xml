<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ========= COMMON SETTINGS ========= -->
    <property name="LOG_PATH" value="logs/app.log" />
    <property name="SPLUNK_TOKEN" value="1d66b1dc-e8e7-4677-9104-c4b0bd05a"/>
    <property name="SPLUNK_HOST" value="localhost"/>
    <property name="SPLUNK_PORT" value="8088"/>
    <property name="SPLUNK_INDEX" value="plans_api_dev"/>

    <!-- ========= FILE APPENDER ========= -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ========= SPLUNK APPENDER ========= -->
    <appender name="SPLUNK" class="com.splunk.logging.HttpEventCollectorLogbackAppender">
        <!-- Correct endpoint -->
        <url>http://${SPLUNK_HOST}:${SPLUNK_PORT}/services/collector/event</url>
        <token>${SPLUNK_TOKEN}</token>
        <index>${SPLUNK_INDEX}</index>
        <batch_size_count>1</batch_size_count>
        <batch_interval>0</batch_interval>
        <disable_certificate_validation>true</disable_certificate_validation>
    </appender>

    <!-- ========= CONSOLE APPENDER ========= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ========= ROOT LOGGER ========= -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="SPLUNK"/>
    </root>

</configuration>
